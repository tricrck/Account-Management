@model OnlineBankingApp.Models.Payee
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string customerId = HttpContextAccessor.HttpContext.Session.GetString("CustomerId");
}

<div class="row justify-content-left">
    <div class="col-12">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Back</button>
    </div>
</div>
<div class="text-center">
    <h2>Add a Payee</h2>
</div>

<div class="row" justify-content-center>
    <div class="col-md-6 offset-md-3">
        <form asp-action="UpdatePayees" method="post">
            <input asp-for="CustomerId" type="hidden" value="@customerId" />

            <div class="form-group">
                <label asp-for="PayeeName">Payee Name:</label>
                <input asp-for="PayeeName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber">Account Number:</label>
                <input asp-for="AccountNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BankName">Bank Name:</label>
                <input asp-for="BankName" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add Payee" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
